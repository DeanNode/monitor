
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>页面权限</title>
    <link href="~/lib/layui/css/layui.css" rel="stylesheet" />
    <script src="~/lib/layui/layui.js"></script>
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script language="JavaScript" src="~/lib/i18n/jquery.i18n.properties.min.js"></script>
    <script src="~/Scripts/public.js"></script>
</head>
<body>
    <div class="layui-tab layui-tab-brief" lay-filter="docDemoTabBrief" style="background-color:#ffffff;">
        <ul class="layui-tab-title">
            <li class="layui-this">页面权限管理</li>
            <li>页面权限分配</li>
        </ul>
        <div class="layui-tab-content">
            <iframe src="../systemTree/kong" style="width:100%;min-height:600px;border:0px;"></iframe>
        </div>
    </div>
</body>
</html>
<script>
    var urlArray = [
        { url: "pageRole_manger" }, { url: "pageRole_feipei" }
    ];
    layui.use(['layer', 'element'], function () {
        var element = layui.element;
        var $ = layui.$;
        $("iframe").attr("src", urlArray[0]["url"]);
        element.on('tab(docDemoTabBrief)', function (data) {
            $("iframe").attr("src", urlArray[data.index]["url"]);
        });
    })
</script>