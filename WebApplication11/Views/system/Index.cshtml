<script type="text/javascript">
    document.addEventListener("DOMContentLoaded", ready);
    function ready() {
        internationalize();
        return { langMaps: langMaps, langObj: langObj }; //将内部的变量
    }
    var langMaps = ready().langMaps;
    var langObj = ready().langObj;
    var gridColumnArray = [ //表头
        { checkbox: true, field: "", title: "" }
        , { field: 'userName', title: langMaps.userName, width: 120 }
        , { field: 'realName', title: '真实名称', width: 120 }
        , { field: 'roleName', title: '页面角色', width: 200 }
        , { field: 'dataRoleName', title: '数据角色', width: 200 }
        , { field: 'phone', title: langMaps.phone, width: 150 }
        , { field: 'email', title: '邮箱', width: 150 }
        , { field: 'orderNum', title: '排序', width: 150 }
        //, { field: 'lastLoginTime', title: '最后登录时间', width: 150 }
        , { field: 'createDate', title: '创建时间', width: 200 }
        , { field: 'remarks', title: '备注' }
        , { field: 'roleId', hide: true }
        , { field: 'dataRoleId', hide: true }
    ];
    var layer, form, table, $, laydate;
    layui.use(['layer', 'form', 'table', 'laydate'], function () {
        layer = layui.layer;
        form = layui.form;
        table = layui.table;
        $ = layui.$; laydate = layui.laydate;
        //这里进行装载数据
        initForm();
    })
    function renderSelect() {
        //初始化
        ajaxMethod("../api/webapiMain/get_sys_role", function (JsonArray) {
            loadingFormSelect($("select[name='roleId']"), JsonArray, "roleId", "roleName");
            form.render('select'); //刷新select选择框渲染
        })
        ajaxMethod("../api/webapiMain/get_sys_data_role", function (JsonArray) {
            loadingFormSelect($("select[name='dataRoleId']"), JsonArray, "dataRoleId", "roleName");
            form.render('select'); //刷新select选择框渲染
        })
    }
    //这里初始化界面
    function initForm() {
        renderSelect();
        //设定时间
        laydate.render({
            elem: '#beginDt' //指定元素
            //, value: getCurrentAddDayYMD(-7) //必须遵循format参数设定的格式
        });
        laydate.render({
            elem: '#endDt' //指定元素
            //, value: getCurrentAddDayYMD(1) //必须遵循format参数设定的格式
        });
        form.render(); //刷新select选择框渲染
        //这里渲染table
        initGrid();
        window.setTimeout(searchDb, 300);//延迟一下进行装载
    }
    function initGrid() {
        table.render({
            elem: '#mainTable'
            , toolbar: "#toolbarDemo"
            , height: 'full-130'
            , data: []
            , page: true //开启分页
            , limits: [15, 30, 50, 100]
            , limit: 15 //每页默认显示的数量
            , cols: [gridColumnArray]
        });
    }
    function searchDb() {
        //这里获取信息
        var divObject = $(".searchDivStyle");
        var searchJsonArray = getJsonListSearchForm(divObject);
        showConsoleLog(searchJsonArray);
        var passJson = {};
        passJson.centerSearchArray = searchJsonArray
        ajaxMethodWithWaiting2("../api/webapiMain/getUserManger", passJson, function (JsonArray) {
            layer.closeAll();//关闭所有的
            table.render({
                elem: '#mainTable'
                , toolbar: "#toolbarDemo"
                , height: 'full-130'
                , data: JsonArray
                , page: true //开启分页
                , cols: [gridColumnArray]
            });
        })
    }
    function setDefaultValue() {
        //设置默认值
        $("input[name='orderNum']").val("1");
    }
    function add() {
        //先清空页面
        var divObject = $("#open_1_Div");
        var ctrl_array = getJsonListOpenFormClearObject(divObject);
        if (ctrl_array.length > 0) {
            $.each(ctrl_array, function (i, obj) {
                $(obj).val("");//进行清空
            })
            form.render("select");
        }
        setDefaultValue();
        //这里弹出一个页面
        confirmFormWithDivID("新增", "#open_1_Div"
            , function (index, layero) {
                //alert(index);
                var vJsonArray = getJsonListOpenForm(divObject);
                showConsoleLog(vJsonArray);
                if (vJsonArray == undefined || vJsonArray.length <= 0) {
                    showMsg(langMaps.noPageDataObtained);
                    return;
                }
                //循环这个数组， 这里检测一下必输项是否填写
                var msgTishi = langMaps.tips;
                $.each(vJsonArray, function (i, json) { //两个参数，第一个参数表示遍历的数组的下标，第二个参数表示下标对应的值
                    if (json.isNeed == "1" && json.fieldValue == "") {
                        msgTishi += "<br>" + json.placeholder + langMaps.notFilledIn;
                    }
                });
                if (msgTishi != langMaps.tips) {
                    showMsg(msgTishi);
                    return;
                }
                //这里进行提交数据
                //这里比较特殊，需要比对密码是否一致
                if ($("#open_1_Div input[name='psw']").val() != $("#open_1_Div input[name='pswAgain']").val()) {
                    showMsg(langMaps.twoPasswordInconsistent);
                    return;
                }
                var passJson = {};
                $.each(vJsonArray, function (i, json) { //两个参数，第一个参数表示遍历的数组的下标，第二个参数表示下标对应的值
                    passJson[json["fieldName"]] = json["fieldValue"];
                });
                showConsoleLog(vJsonArray);
                var iWaiting = 0;
                $.ajax({
                    type: "post",
                    url: "../api/webapiMain/userAdd",
                    beforeSend: function () {
                        iWaiting = layer.load(1);
                    },
                    data: passJson,
                    success: function (data) {
                        layer.close(iWaiting);//关闭等待的
                        if (data.code == 100) {
                            showMsg(langMaps.addSuccessFully);
                            layer.close(index);
                            searchDb();
                        } else {
                            showMsg(langMaps.addFailed + data.msg);
                        }
                    }
                })
            })
    }
    function edit() {
        var checkStatus = table.checkStatus('mainTable'); //mainTable 即为基础参数 id 对应的值
        var selectedRows = checkStatus.data; //获取选中行的数据
        if (selectedRows.length == 1) {
            //这里进行赋值
            var divObject = $("#open_1_Div_edit");
            var ctrl_array = getJsonListOpenFormClearObject(divObject);
            if (ctrl_array.length > 0) {
                $.each(ctrl_array, function (i, json) {
                    var keyName = json.name;
                    $(json).val(selectedRows[0][keyName]);
                });
                setTimeout(function () { form.render('select') }, 500);
            }
            //这里进行
            confirmFormWithDivID(langMaps.update, "#open_1_Div_edit"
                , function (index, layero) {
                    //alert(index);
                    var vJsonArray = getJsonListOpenForm(divObject);
                    showConsoleLog(vJsonArray);
                    if (vJsonArray == undefined || vJsonArray.length <= 0) {
                        showMsg(langMaps.noPageDataObtained)
                        return;
                    }
                    //循环这个数组， 这里检测一下必输项是否填写
                    var msgTishi = langMaps.tips;
                    $.each(vJsonArray, function (i, json) { //两个参数，第一个参数表示遍历的数组的下标，第二个参数表示下标对应的值
                        if (json.isNeed == "1" && json.fieldValue == "") {
                            msgTishi += "<br>" + json.placeholder + langMaps.notFilledIn;
                        }
                    });
                    if (msgTishi != langMaps.tips) {
                        showMsg(msgTishi);
                        return;
                    }
                    //这里进行提交数据
                    var passJson = {};
                    $.each(vJsonArray, function (i, json) { //两个参数，第一个参数表示遍历的数组的下标，第二个参数表示下标对应的值
                        passJson[json["fieldName"]] = json["fieldValue"];
                    });
                    showConsoleLog(vJsonArray);
                    var iWaiting = 0;
                    $.ajax({
                        type: "post",
                        url: "../api/webapiMain/userUpdate",
                        beforeSend: function () {
                            iWaiting = layer.load(1);
                        },
                        data: passJson,
                        success: function (data) {
                            layer.close(iWaiting);//关闭等待的
                            if (data.code == 100) {
                                showMsg(langMaps.addSuccessFully);
                                layer.close(index);
                                searchDb();
                            }
                            else {
                                showMsg(langMaps.addFailed + data.msg);
                            }
                        }
                    })
                })
        } else {
            showMsg(langMaps.selectRowOperate);
        }
    }
    function del() {
        var checkStatus = table.checkStatus('mainTable'); //mainTable 即为基础参数 id 对应的值
        var selectedRows = checkStatus.data; //获取选中行的数据
        var iRowsLen = selectedRows.length;
        if (iRowsLen > 0) {
            layer.confirm(langObj.prop("deleteRow", iRowsLen), { icon: 3, title: langMaps.tips }, function (index) {
                //do something
                var useridList = "";
                $.each(selectedRows, function (i, json) {
                    if (useridList) {
                        useridList += "," + json["userId"];
                    }
                    else {
                        useridList = json["userId"];
                    }
                })
                var passJson = {};
                passJson.userIdList = useridList;
                ajaxMethodWithWaiting2("../api/webapiMain/userDel", passJson, function (data) {
                    if (data.code == 100) {
                        showMsg(data.msg);
                        searchDb();
                    }else {
                        showMsg(data.msg);
                    }
                })
                layer.close(index);
            });
        }
        else {
            showMsg(langMaps.selectRowOperate);
        }
    }
    function exportMethod() {
        var iRowsLen = $("div[lay-id='mainTable'] .layui-table-body  tr").length
        if (iRowsLen <= 0) {
            showMsg(langMaps.queryBeforeExporting);
            return;
        }
        layer.confirm(langObj.prop("exportRow", iRowsLen), { icon: 3, title: langMaps.tips }, function (index) {
            layer.close(index);
            var url = "../api/export/publicExport";
            var passJson = {
                keyName: "getUserManger",
                columnArray: gridColumnArray,
                fileName: "用户数据导出"
            };
            $.fileDownload(url, {
                httpMethod: 'post',
                data: passJson,
                prepareCallback: function (url) {
                    showMsg(langMaps.loading);
                }, successCallback: function (url) {
                    showMsg(langMaps.importSucceeded);
                }, failCallback: function (html, url) {
                    showMsg(html);
                }
            });
        });
    }
