                    $.each(vJsonArray, function (i, json) { //两个参数，第一个参数表示遍历的数组的下标，第二个参数表示下标对应的值
                        passJson[json["fieldName"]] = json["fieldValue"];
                    });
                    var iWaiting = 0;
                    $.ajax({
                        type: "post",
                        url: "../api/webapiMain/resetPsw",
                        beforeSend: function () {
                            iWaiting = layer.load(1);
                        },
                        data: passJson,
                        success: function (data) {
                            layer.close(iWaiting);//关闭等待的
                            if (data.code == 100) {
                                showMsg(langMaps.resetSucceessFul);
                                layer.close(index);
                                searchDb();
                            } else {
                                showMsg(langMaps.resetFailed + data.msg);
                            }
                        }
                    })
                })
        }
        else {
            showMsg(selectRowOperate);
        }
    }
