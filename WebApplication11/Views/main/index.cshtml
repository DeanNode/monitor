                $("#a_loginName").html("【" + public_userName + "】");
            }
            if (projectName) {
                $("#a_projectName").html("【" + projectName + "】");
            }
            $("#a_projectName").mousemove(function () {
                layer.tips('点击重新选择项目！', '#a_projectName', {
                    tips: [2, '#5fb878']
                });
            })
            getMenu(roleId);
            //queryWarn();
            //$(".warn-nav-item a").trigger("click");
        })
    function getMenu(roleId) {
            var iwaitIndex = 0;
            var url = "../api/webapi_menu/getFunctionInfoFromRoleId?roleId=" + roleId;
            $.ajax({
                type: "GET",
                url: url,
                dataType: "json",
                beforeSend: function () {
                    iwaitIndex = layer.load();
                },
                success: function (data) {
                    layer.close(iwaitIndex);
                    if (data.length > 0) {
                        var html = "";
                        $.each(data, function (i, json) {
                            html += '<li class="layui-nav-item">';
                            html += '<a href="javascript:;" lay-tips="' + json["menuName"]+'" lay-direction="2">';
                            html += ' <i class="layui-icon ' + json["menuIcon"]+'"></i>';
                            html += '<span  >' + json["menuName"] + '</span>';
                            html += '</a>';
                            if (json["Children"].length > 0) {
                                html += '<dl class="layui-nav-child">';
                                $.each(json["Children"], function (j, jsonDetail) {
                                    html += '<dd data-name="nav' + jsonDetail["functionId"]+'" >';
                                    html += '<a onclick="goto(\'' + jsonDetail["url"] +'\')">' + jsonDetail["functionName"] + '</a>';
                                    html += '</dd>';
                                })
                                html += '</dl>';
                            }
                            html += '</li>';
                        })
                        $("#leftTree").html(($("#leftTree").eq(0).html() + html));
                        element.render('nav');
                    }
                    layui.config({
                        base: '../layuiadmin/' //静态资源所在路径
                    }).extend({
                        index: 'lib/index' //主入口模块
                    }).use('index');
                }
            })
        }
    $(function () {
        var height = $("body").height() - 100;
        if (height <= 700) {
            height = 700;
        }
        $(".page-content").height(height);
        $("#iframeMain").height(height);
        internationalize();//调用国际化程序
    })
    function goto(url) {
        if (url) {
            $("#iframeMain").attr("src",url);
        }
    }
</script>